const questions = [
  {
    question:
      "Which of the following function can interpret data in the C language?",
    options: ["printf", "scanf", "proc", "file"],
    answer: "scanf",
  },
  {
    question: " What is the first stage of the compilation process?",
    options: ["pre-processing", "post-processing", "compilation", "linking"],
    answer: "scanf",
  },
];
let score = 0;
const questionOption = document.querySelectorAll(".options p");

const scoreBox = document.getElementById("score");

const question = document.querySelector(".question");
const optionOne = document.getElementById("one");
const optionTwo = document.getElementById("two");
const optionThree = document.getElementById("three");
const optionFour = document.getElementById("four");

const questionBox = () => {
  question.innerHTML = questions[0].question;
  optionOne.innerHTML = questions[0].options[0];
  optionTwo.innerHTML = questions[0].options[1];
  optionThree.innerHTML = questions[0].options[2];
  optionFour.innerHTML = questions[0].options[3];
};

questionBox();

questionOption.forEach((option) => {
  option.addEventListener("click", (e) => {
    console.log(e.target.innerHTML);
    if (e.target.innerHTML === questions[0].answer) {
      score++;
    }
  });
});

score.innerHTML = score;
